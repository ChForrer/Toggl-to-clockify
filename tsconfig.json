{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2016",
      "es2017.object",
      "esnext.asynciterable"
    ],
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "outDir": "lib",
    "baseUrl": "./",
    "removeComments": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/__fixtures__"
  ]
}
